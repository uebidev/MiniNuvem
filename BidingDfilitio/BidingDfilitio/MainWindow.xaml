<Window x:Class="BidingDfilitio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BidingDfilitio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnExecutar" Content="{Binding Text, ElementName=txtTeste}" Width="800" Height="100" HorizontalAlignment="Center"  VerticalAlignment="Top">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF2626" Offset="0"/>
                    <GradientStop Color="#FF1E2FB9" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox Name="txtTeste"  Height="30" VerticalAlignment="Bottom" Margin="0,0,10,299" TextChanged="txtTeste_TextChanged"/>
    </Grid>
</Window>
